@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RazorApp.Pages.Student.IndexModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Hello from Student Page</h1>
<h2>@DateTime.Now</h2>
<h1>@Model.Message</h1>
<hr/>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Firstname</th>
            <th scope="col">Lastname</th>
            <th scope="col">Email</th>
            <th scope="col">#</th>
            <th scope="col">#</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Students){
            <tr>         
                <th scope="row">@item.Id</th>
                <td>@item.Firstname</td>
                <td>@item.Lastname</td>
                <td>@item.Email</td>
                <td><a class="btn btn-outline-primary">Edit</a></td>
                <td><a class="btn btn-outline-danger">Delete</a></td>
            </tr>
        }
        <hr />
        <form method="post">
            Firstname : <input asp-for="Student.Firstname" />
            Lastname : <input asp-for="Student.Lastname" />
            Email : <input asp-for="Student.Email" />
            <input type="submit" value="Register"/>
        </form>
    </tbody>
</table>